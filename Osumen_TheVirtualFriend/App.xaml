<Application
    x:Class="Osumen_TheVirtualFriend.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <AcrylicBrush                         x:Key="WindowBackground"                        BackgroundSource="HostBackdrop"                        TintColor="#FFFFFF"                        TintOpacity="0.9"                        TintLuminosityOpacity="0.8"                        FallbackColor="#FFFFFF"                        />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <AcrylicBrush                         x:Key="WindowBackground"                        BackgroundSource="HostBackdrop"                        TintColor="#333333"                        TintOpacity="0.9"                        TintLuminosityOpacity="0.8"                        FallbackColor="#333333"                        />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
